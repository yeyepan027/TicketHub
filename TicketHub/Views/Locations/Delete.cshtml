@model Location 

@{
    ViewData["Title"] = "Delete"; 
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3> <!-- Confirmation prompt -->
<div>
    <h4>Location</h4> <!-- Container for location details and delete form -->
    <hr />
    <dl class="row">
        <!-- Definition list to display location details -->
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name) <!-- Term or label for the Name property -->
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name) <!-- Definition or value of the Name property -->
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address) 
        </dd>
    </dl>

    <!-- Form to confirm deletion -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" /> <!-- Hidden input to pass the Location ID -->
        <input type="submit" value="Delete" class="btn btn-danger" /> | <!-- Submit button to confirm deletion -->
        <a asp-action="Index">Back to List </a> <!-- Link to go back to the location list -->
    </form>
</div>
