@model Location

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="p-4 bg-white rounded shadow" style="width: 450px;">
        <h4 class="text-center mb-4 fw-bold text-danger">Delete Location</h4>
        <hr />

        <p class="text-center text-danger fw-semibold">Are you sure you want to delete this location?</p>

        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Address</dt>
            <dd class="col-sm-8">@Model.Address</dd>
        </dl>

        <form asp-action="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-sm ms-2">Back to List</a>
        </form>
    </div>
</div>x