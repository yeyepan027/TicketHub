@model Category 

@{
    ViewData["Title"] = "Delete"; 
}

<h1>Delete</h1> 

<h3>Are you sure you want to delete this?</h3> <!-- Confirmation prompt -->
<div>

    <!-- Container for category details and delete form -->
    <h4>Category</h4>
    <hr />

    <!-- Definition list to display category details -->
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>


    <!-- Form to confirm deletion -->
    <form asp-action="Delete">
        <!-- Hidden input to pass the Category ID -->
        <input type="hidden" asp-for="Id" />
        <!-- Submit button to confirm deletion -->
        <input type="submit" value="Delete" class="btn btn-danger" /> |

        <!-- Link to go back to the category list -->
        <a asp-action="Index">Back to List</a>
    </form>
</div>
