@model Category

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="p-4 bg-white rounded shadow" style="width: 450px;">
        <h4 class="text-center mb-4 fw-bold">Create New Category</h4>
        <hr />

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control form-control-lg"
                    placeholder="Enter category name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <div class="d-grid mb-3">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>

        <!-- Back to List -->
        <div class="d-grid">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}