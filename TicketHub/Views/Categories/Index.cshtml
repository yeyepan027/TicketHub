@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index"; 
}

<h1>CATEGORY</h1>

<p>
    <!-- Link to navigate to the Create view -->
    <a asp-action="Create">Create New</a>
</p>
<!-- Table to display the list of categories -->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name) <!-- Gets the display name of the Name property -->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop through each category in the model -->
@foreach (var item in Model) {
        <tr>
            <td>
                    <!-- Display the Name of the category -->
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <!-- Action links: Edit, Details, Delete -->
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
