@{
    ViewData["Title"] = "Logout";
}

<h2 class="mb-4">Logout</h2>

<p>Are you sure you want to log out?</p> <!-- Confirmation message for logging out -->

<form asp-action="LogoutConfirmed" method="post"> 
    <button type="submit" class="btn btn-danger">Logout</button> <!-- Submit button to confirm logout -->
    <a asp-action="Index" class="btn btn-secondary">Cancel</a> <!-- Button to cancel and go back to the index page -->
</form>


