

@{
    ViewData["Title"] = "Logout";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="p-4 bg-white rounded shadow" style="width: 400px;">
        <h2 class="text-center mb-4 fw-bold">Logout</h2>
        <p class="text-center mb-4">Are you sure you want to log out?</p>

        <form asp-action="LogoutConfirmed" method="post">
            <button type="submit" class="btn btn-danger btn-sm">Logout</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>