@model IEnumerable<TicketHub.Models.Show>

@{
    ViewData["Title"] = "Home";
}

<div class="homepage-hero mb-5">
    <h1 class="display-4 fw-bold">Welcome to TicketHub</h1>
    <p class="lead">Your one-stop platform for managing shows, events, and tickets.</p>

    <div class="mt-4">
        <</>
    </div>
</div>

<hr class="my-5" />

<h2 class="mb-4">Upcoming Events</h2>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Category</th>
            <th>Location</th>
            <th>Owner</th>
            <th>Date</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var show in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(show.ImageUrl))
                    {
                        <img src="@show.ImageUrl" alt="Event Image" style="width: 100px; height: auto;" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>

              
                <td>@show.Title</td>
                <td>@show.Category?.Name</td>
                <td>@show.Location?.Name</td>
                <td>@show.Owner?.Name</td>
                <td>@show.Date.ToShortDateString()</td>
                <td>@show.Time.ToString(@"hh\:mm")</td>
            </tr>
        }
    </tbody>
</table>