@model IEnumerable<TicketHub.Models.Show>

@{
    ViewData["Title"] = "Home";
}

<div class="homepage-hero mb-5">
    <h1 class="display-4 fw-bold">Welcome to TicketHub</h1>
    <p class="lead">Your one-stop platform for managing shows, events, and tickets.</p>

    <div class="mt-4">
        <a class="btn btn-primary" asp-controller="Home" asp-action="Create">Create Show</a>
    </div>
</div>

<hr class="my-5" />

<h2 class="mb-4">Upcoming Events</h2>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Category</th>
            <th>Location</th>
            <th>Owner</th>
            <th>Date</th>
            <th>Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var show in Model)
        {
            <tr>
                <td>
                    <img src="@(string.IsNullOrEmpty(show.ImageFilename) ? "default.png" : show.ImageFilename)" alt="Show Image" style="max-width:100px;" />
                </td>
                <td>@show.Title</td>
                <td>@show.Category?.Name</td>
                <td>@show.Location?.Name</td>
                <td>@show.Owner?.Name</td>
                <td>@show.Date.ToShortDateString()</td>
                <td>@DateTime.Today.Add(show.Time).ToString("hh:mm tt")</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@show.Id">Edit</a>
                    <a class="btn btn-sm btn-info" asp-controller="Home" asp-action="Details" asp-route-id="@show.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@show.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>