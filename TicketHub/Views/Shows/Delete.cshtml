
@model TicketHub.Models.Show

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="p-4 bg-white rounded shadow" style="width: 550px;">
        <h4 class="text-center mb-4 fw-bold text-danger">Delete Show</h4>
        <hr />

        <p class="text-center text-danger fw-semibold">Are you sure you want to delete this show?</p>

        <dl class="row">
            <dt class="col-sm-4">Title</dt>
            <dd class="col-sm-8">@Model.Title</dd>

            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Model.Category?.Name</dd>

            <dt class="col-sm-4">Location</dt>
            <dd class="col-sm-8">@Model.Location?.Name</dd>

            <dt class="col-sm-4">Owner</dt>
            <dd class="col-sm-8">@Model.Owner?.Name</dd>

            <dt class="col-sm-4">Date</dt>
            <dd class="col-sm-8">@Model.Date.ToString("MM/dd/yyyy")</dd>
        </dl>
        <form asp-action="Delete">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Back to List</a>
        </form>
    </div>
</div>