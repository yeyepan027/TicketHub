@model TicketHub.Models.Show

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="p-4 bg-white rounded shadow" style="width: 550px;">
        <h4 class="text-center mb-4 fw-bold">Show Details</h4>
        <hr />

        <!-- Show Image -->
        <div class="text-center mb-4">
            @if (!string.IsNullOrEmpty(Model.ImageFilename))
            {
                <img src="@Url.Content(Model.ImageFilename)" alt="Show Image" class="img-fluid rounded" />
            }
        </div>

        <!-- Show Details -->
        <dl class="row">
            <dt class="col-sm-4">Title</dt>
            <dd class="col-sm-8">@Model.Title</dd>

            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Category</dt>
            <dd class="col-sm-8">@Model.Category?.Name</dd>

            <dt class="col-sm-4">Location</dt>
            <dd class="col-sm-8">@Model.Location?.Name</dd>

            <dt class="col-sm-4">Owner</dt>
            <dd class="col-sm-8">@Model.Owner?.Name</dd>

            <dt class="col-sm-4">Date</dt>
            <dd class="col-sm-8">@Model.Date.ToString("MM/dd/yyyy")</dd>

            <dt class="col-sm-4">Time</dt>
            <dd class="col-sm-8">@DateTime.Today.Add(Model.Time).ToString("hh:mm tt")</dd>

            <dt class="col-sm-4">Created</dt>
            <dd class="col-sm-8">@Model.CreateDate.ToString("MM/dd/yyyy")</dd>
        </dl>

        <!-- Buttons -->
        <div class="d-grid gap-2 mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>