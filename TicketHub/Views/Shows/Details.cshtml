@model TicketHub.Models.Show

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1> 

<div>
    <h4>Show</h4> <!-- Container for displaying show details -->
    <hr />
    <dl class="row">

        @if (!string.IsNullOrEmpty(Model.ImageFilename))
        {
            <div class="mb-3">
                <img src="@Url.Content($"~/images/{Model.ImageFilename}")" alt="Show Image" class="img-fluid" />
            </div>
        }
        else
        {
            <div class="mb-3">
                <img src="~/images/placeholder.jpg" alt="No Image" class="img-fluid" />
            </div>
        }
        <!-- Definition list to display property labels and values -->
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title) <!-- Label for the Title property -->
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title) <!-- Value of the Title property -->
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryId) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryId) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LocationId) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationId) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerId) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerId) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate) 
        </dd>
    </dl>
</div>
<div>

    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> | <!-- Link to edit the current show -->
    <a asp-action="Index">Back to List</a> <!-- Link to go back to the show list -->
</div>
