@model TicketHub.Models.Show

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="p-4 bg-white rounded shadow" style="width: 500px;">
        <h4 class="text-center mb-4 fw-bold">Add New Show</h4>
        <hr />

        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Title -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-semibold"></label>
                <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter show title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control form-control-lg" rows="3" placeholder="Enter description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label fw-semibold">Category</label>
                <select asp-for="CategoryId" class="form-select form-select-lg" asp-items="ViewBag.CategoryList"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Location -->
            <div class="mb-3">
                <label asp-for="LocationId" class="form-label fw-semibold">Location</label>
                <select asp-for="LocationId" class="form-select form-select-lg" asp-items="ViewBag.LocationList"></select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>

            <!-- Owner -->
            <div class="mb-3">
                <label asp-for="OwnerId" class="form-label fw-semibold">Owner</label>
                <select asp-for="OwnerId" class="form-select form-select-lg" asp-items="ViewBag.OwnerList"></select>
                <span asp-validation-for="OwnerId" class="text-danger"></span>
            </div>

            <!-- Date -->
            <div class="mb-3">
                <label asp-for="Date" class="form-label fw-semibold"></label>
                <input asp-for="Date" class="form-control form-control-lg" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <!-- Time -->
            <div class="mb-3">
                <label asp-for="Time" class="form-label fw-semibold"></label>
                <input asp-for="Time" class="form-control form-control-lg" type="time" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <!-- Image Upload -->
            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label fw-semibold">Event Image</label>
                <input type="file" asp-for="ImageFile" class="form-control form-control-lg" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <div class="d-grid mb-3">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>

        <!-- Back to List -->
        <div class="d-grid">
            <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}